{
  "download_dir": "./downloads",
  "max_concurrent_downloads": 5,
  "max_crawl_depth": 1,
  "timeout": 30,
  "retry_count": 3,
  "chunk_size": 8192,
  "file_types": [
    "documents",
    "images", 
    "videos",
    "audio",
    "archives"
  ],
  "custom_extensions": [],
  "same_domain_only": true,
  "respect_robots_txt": false,
  "delay_between_requests": 1,
  "enable_logging": true,
  "log_level": "INFO",
  "save_metadata": true,
  "metadata_file": "crawl_metadata.json"
}